{
  "extends": "tsconfig/remix.json",
  "include": [
    "remix.env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "class-variance-authority": ["./node_modules/class-variance-authority"],
      "~/*": ["./app/*"]
    }
  }
}